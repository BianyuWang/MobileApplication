<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HistoryDetailActivity"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/AvatarUser_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/button_style"
            android:scaleType="centerInside"
            android:src="@drawable/pikachu"
            />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"

            android:id="@+id/UserName_tv"
            android:layout_width="0dp"
            android:fontFamily="@font/myfont"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />

        <TextView

            android:layout_gravity="right|center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:fontFamily="@font/myfont"
            android:textSize="16dp"
            android:text="@string/high_score" />

        <TextView
            android:id="@+id/HighScore_tv"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_gravity="right|center"
            android:fontFamily="@font/myfont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/longest_time" />

        <TextView
            android:id="@+id/LongestTime_tv"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
<LinearLayout
    android:id="@+id/MessageBox_ll"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="9">
    <ListView
        android:id="@+id/advanced_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"

        />
</LinearLayout>
    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="4dp"
        android:background="@drawable/border_corner"
        android:orientation="horizontal">

        <Button
            android:id="@+id/jsonReaderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="JSON Reader" />

        <Button
            android:id="@+id/xmlReaderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="XML Reader" />

        <Button
            android:id="@+id/readerDB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:text="DB Reader" />
    </LinearLayout>

</LinearLayout>
